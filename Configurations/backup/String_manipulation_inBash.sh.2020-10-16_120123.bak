#!/bin/bash
#Shell parameter expansion

# ${parameter#pattern} removes the smallest leftmost part that matches the pattern.
NAME="user/dir/subdir/file.c"
remainig=${NAME#*/}
echo $remainig
# ${parameter##pattern} removes the largest leftmost part that matches the pattern.
remainig=${NAME##*/}
echo $remainig
# ${parameter%pattern} removes the smallest rightmost part that matches the pattern.
remainig=${NAME%.?}
echo $remainig
# ${parameter%%pattern} removes the longest rightmost part that matches pattern.
remainig=${NAME%%/*}
echo $remainig
## examples
fileExtension=${NAME##*.}
echo "fileExtension of the path " $NAME " is " $fileExtension
#
fileName=${NAME##*/}
fileName=${fileName%%*.}
echo "fileExtension of the path " $NAME " is " $fileName

read -p "Press [Enter] key to go on." 